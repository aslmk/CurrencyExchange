<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee webapp_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>First-Servlet</servlet-name>
        <servlet-class>aslmk.Servlets.CurrencyServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>First-Servlet</servlet-name>
        <url-pattern>/currency/*</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>Second-Servlet</servlet-name>
        <servlet-class>aslmk.Servlets.CurrenciesServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Second-Servlet</servlet-name>
        <url-pattern>/currencies</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Third-Servlet</servlet-name>
        <servlet-class>aslmk.Servlets.ExchangeRateServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Third-Servlet</servlet-name>
        <url-pattern>/exchangeRate/*</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>Fourth-Servlet</servlet-name>
        <servlet-class>aslmk.Servlets.ExchangeRatesServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Fourth-Servlet</servlet-name>
        <url-pattern>/exchangeRates</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>Fifth-Servlet</servlet-name>
        <servlet-class>aslmk.Servlets.ExchangeServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Fifth-Servlet</servlet-name>
        <url-pattern>/exchange</url-pattern>
    </servlet-mapping>
</web-app>
